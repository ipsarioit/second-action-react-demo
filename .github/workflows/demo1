name: Events Demo 1
# on: [push, workflow_dispatch]
on: [workflow_dispatch]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Output event data
        run: echo "${{ toJson(github.event)}}"

      - name: Get code
        uses: actions/checkout@v3

      - name: Install dependencies
        run: npm ci

      - name: Start testing!
        run: npm test

      - name: Build project
        run: npm run build

      - name: Deploy
        run: echo "Deploying...."




